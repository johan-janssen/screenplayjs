{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "./dist/",
		"sourceMap": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"target": "es2021",
        "types": ["node", "mocha", "should"],
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"screenplayjs/*": ["*"]
		},
		"lib": ["es2021", "dom"]
	},
	"exclude": [
        "node_modules",
		"dist/**/*"
	]
}
